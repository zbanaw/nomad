<p id="notice"><%= notice %></p>

<h1>Coaches</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Timezone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coaches.each do |coach| %>
      <tr>
        <td><%= coach.name %></td>
        <td><%= coach.timezone %></td>
      </tr>
      <tr>
        <td colspan="2">
          <table class="table mb-0">
            <thead>
              <tr>
                <th>Day of the Week</th>
                <th>Available At</th>
                <th>Available Until</th>
              </tr>
            </thead>

            <tbody>
              <% coach.available_times.each do |times| %>
                <tr>
                  <td><%= Date::DAYNAMES[times.day_of_week] %></td>
                  <td><%= times.start.in_time_zone(coach.timezone).strftime("%l:%M %p") %></td>
                  <td><%= times.end.in_time_zone(coach.timezone).strftime("%l:%M %p") %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
